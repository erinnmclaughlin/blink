@page "/"

<PageTitle>Home</PageTitle>

<div class="page">
    <h1 class="h1">Blink</h1>
    <p>A video sharing platform.</p>
</div>

<AuthorizeView>
    <h2>Your Claims</h2>
    <ul>
        @foreach (var claim in context.User?.Claims ?? Array.Empty<System.Security.Claims.Claim>())
        {
            <li><strong>@claim.Type</strong>: @claim.Value</li>
        }
    </ul>
</AuthorizeView>
