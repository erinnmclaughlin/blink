<AuthorizeView>
    <Authorized>
        @if (ChildContent is not null)
        {
            @ChildContent?.Invoke(CurrentUser.FromClaims(context.User.Claims.ToList()))
        }
        @if (Authorized is not null)
        {
            @Authorized?.Invoke(CurrentUser.FromClaims(context.User.Claims.ToList()))
        }
    </Authorized>
    <NotAuthorized>
        @NotAuthorized
    </NotAuthorized>
</AuthorizeView>


