@page "/videos"
@using Microsoft.AspNetCore.Authorization
@inject BlinkApiClient ApiClient
@inject ILogger<VideoList> Logger
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Videos</PageTitle>

<h1>Video Library</h1>

<div class="container mt-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading videos...</span>
            </div>
            <p class="mt-3">Loading videos...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" @onclick="LoadVideosAsync">
                <span class="bi bi-arrow-clockwise"></span> Retry
            </button>
        </div>
    }
    else if (videos.Count == 0)
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-film text-muted mb-3" viewBox="0 0 16 16">
                    <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1zm4 0v6h8V1H4zm8 8H4v6h8V9zM1 1v2h2V1H1zm2 3H1v2h2V4zM1 7v2h2V7H1zm2 3H1v2h2v-2zm-2 3v2h2v-2H1zM15 1h-2v2h2V1zm-2 3v2h2V4h-2zm2 3h-2v2h2V7zm-2 3v2h2v-2h-2zm2 3h-2v2h2v-2z"/>
                </svg>
                <h3>No Videos Yet</h3>
                <p class="text-muted">You haven't uploaded any videos yet.</p>
                <a href="/videos/upload" class="btn btn-primary mt-3">
                    <span class="bi bi-cloud-upload"></span> Upload Your First Video
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-md-6">
                <p class="text-muted">Showing @videos.Count video@(videos.Count != 1 ? "s" : "")</p>
            </div>
            <div class="col-md-6 text-end">
                <button class="btn btn-outline-secondary btn-sm" @onclick="LoadVideosAsync">
                    <span class="bi bi-arrow-clockwise"></span> Refresh
                </button>
                <a href="/videos/upload" class="btn btn-primary btn-sm ms-2">
                    <span class="bi bi-cloud-upload"></span> Upload Video
                </a>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var video in videos.OrderByDescending(v => v.LastModified))
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-start mb-2">
                                <div class="flex-grow-1" style="min-width: 0;">
                                    @if (editingVideoId == video.BlobName)
                                    {
                                        <div class="input-group input-group-sm mb-1">
                                            <input type="text" 
                                                   class="form-control" 
                                                   @bind="editingTitle" 
                                                   @bind:event="oninput"
                                                   @onkeydown="@(e => HandleTitleKeyDown(e, video))"
                                                   placeholder="Enter new title" />
                                            <button class="btn btn-sm btn-success" @onclick="() => SaveTitle(video)" disabled="@isUpdatingTitle">
                                                @if (isUpdatingTitle)
                                                {
                                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                                }
                                                else
                                                {
                                                    <span class="bi bi-check-lg"></span>
                                                }
                                            </button>
                                            <button class="btn btn-sm btn-secondary" @onclick="CancelEditTitle" disabled="@isUpdatingTitle">
                                                <span class="bi bi-x-lg"></span>
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center mb-1">
                                            <h5 class="card-title text-truncate mb-0 flex-grow-1" title="@GetDisplayTitle(video)">
                                                @GetDisplayTitle(video)
                                            </h5>
                                            <button class="btn btn-sm btn-link p-0 ms-2" @onclick="() => StartEditTitle(video)" title="Edit title">
                                                <span class="bi bi-pencil text-primary"></span>
                                            </button>
                                        </div>
                                    }
                                    <h6 class="card-subtitle mb-2 text-muted small">
                                        @GetFileExtension(video.FileName).ToUpperInvariant()
                                    </h6>
                                </div>
                                <span class="badge bg-secondary ms-2">
                                    @GetVideoIcon(video.ContentType)
                                </span>
                            </div>
                            
                            <div class="mb-3">
                                <div class="d-flex justify-content-between small text-muted mb-1">
                                    <span><strong>Size:</strong></span>
                                    <span>@FormatFileSize(video.SizeInBytes)</span>
                                </div>
                                <div class="d-flex justify-content-between small text-muted mb-1">
                                    <span><strong>Uploaded:</strong></span>
                                    <span>@(video.LastModified?.LocalDateTime.ToString("g") ?? "Unknown")</span>
                                </div>
                                <div class="d-flex justify-content-between small text-muted">
                                    <span class="flex-shrink-0"><strong>Blob:</strong></span>
                                    <span class="text-truncate ms-2" style="max-width: 60%;" title="@video.BlobName">
                                        @video.BlobName
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-primary flex-fill" @onclick="() => NavigateToWatch(video)">
                                    <span class="bi bi-play-circle"></span> Watch
                                </button>
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => ViewVideoDetails(video)">
                                    <span class="bi bi-info-circle"></span>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDeleteVideo(video)">
                                    <span class="bi bi-trash"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (selectedVideoForDetails != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Video Details</h5>
                    <button type="button" class="btn-close" @onclick="CloseDetailsModal"></button>
                </div>
                <div class="modal-body">
                    <dl class="row">
                        <dt class="col-sm-4">Title:</dt>
                        <dd class="col-sm-8 text-break">@GetDisplayTitle(selectedVideoForDetails)</dd>

                        <dt class="col-sm-4">File Name:</dt>
                        <dd class="col-sm-8 text-break">@selectedVideoForDetails.FileName</dd>

                        <dt class="col-sm-4">Blob Name:</dt>
                        <dd class="col-sm-8 text-break"><small>@selectedVideoForDetails.BlobName</small></dd>

                        <dt class="col-sm-4">Size:</dt>
                        <dd class="col-sm-8">@FormatFileSize(selectedVideoForDetails.SizeInBytes)</dd>

                        <dt class="col-sm-4">Content Type:</dt>
                        <dd class="col-sm-8">@selectedVideoForDetails.ContentType</dd>

                        <dt class="col-sm-4">Last Modified:</dt>
                        <dd class="col-sm-8">@(selectedVideoForDetails.LastModified?.LocalDateTime.ToString("F") ?? "Unknown")</dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @onclick="() => { CloseDetailsModal(); NavigateToWatch(selectedVideoForDetails); }">
                        <span class="bi bi-play-circle"></span> Watch
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="CloseDetailsModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@if (videoToDelete != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.6);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <span class="bi bi-exclamation-triangle"></span> Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete" disabled="@isDeletingVideo"></button>
                </div>
                <div class="modal-body">
                    @if (isDeletingVideo)
                    {
                        <div class="text-center py-3">
                            <div class="spinner-border text-danger" role="status">
                                <span class="visually-hidden">Deleting video...</span>
                            </div>
                            <p class="mt-3">Deleting video...</p>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(deleteError))
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong>Error!</strong> @deleteError
                        </div>
                        <p>Would you like to try again?</p>
                        <p class="mb-0"><strong>@videoToDelete.FileName</strong></p>
                    }
                    else
                    {
                        <p>Are you sure you want to delete this video? This action cannot be undone.</p>
                        <div class="card bg-light">
                            <div class="card-body">
                                <p class="mb-1"><strong>File Name:</strong> @videoToDelete.FileName</p>
                                <p class="mb-1"><strong>Size:</strong> @FormatFileSize(videoToDelete.SizeInBytes)</p>
                                <p class="mb-0"><strong>Uploaded:</strong> @(videoToDelete.LastModified?.LocalDateTime.ToString("g") ?? "Unknown")</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    @if (!string.IsNullOrEmpty(deleteError))
                    {
                        <button type="button" class="btn btn-danger" @onclick="DeleteVideo" disabled="@isDeletingVideo">
                            <span class="bi bi-arrow-clockwise"></span> Retry Delete
                        </button>
                    }
                    else if (!isDeletingVideo)
                    {
                        <button type="button" class="btn btn-danger" @onclick="DeleteVideo">
                            <span class="bi bi-trash"></span> Delete
                        </button>
                    }
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete" disabled="@isDeletingVideo">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<VideoInfo> videos = new();
    private bool isLoading = true;
    private string? errorMessage;
    
    // Video details state
    private VideoInfo? selectedVideoForDetails;
    
    // Video delete state
    private VideoInfo? videoToDelete;
    private bool isDeletingVideo;
    private string? deleteError;
    
    // Video title editing state
    private string? editingVideoId;
    private string editingTitle = string.Empty;
    private bool isUpdatingTitle;

    protected override async Task OnInitializedAsync()
    {
        await LoadVideosAsync();
    }

    private async Task LoadVideosAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            videos = await ApiClient.GetVideosAsync();
            Logger.LogInformation("Loaded {Count} videos", videos.Count);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load videos: {ex.Message}";
            Logger.LogError(ex, "Error loading videos");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToWatch(VideoInfo video)
    {
        NavigationManager.NavigateTo($"/videos/watch/{Uri.EscapeDataString(video.BlobName)}");
    }

    private void ViewVideoDetails(VideoInfo video)
    {
        selectedVideoForDetails = video;
    }

    private void CloseDetailsModal()
    {
        selectedVideoForDetails = null;
    }

    private void ConfirmDeleteVideo(VideoInfo video)
    {
        videoToDelete = video;
        isDeletingVideo = false;
        deleteError = null;
    }

    private void CancelDelete()
    {
        if (!isDeletingVideo)
        {
            videoToDelete = null;
            deleteError = null;
        }
    }

    private async Task DeleteVideo()
    {
        if (videoToDelete == null)
            return;

        isDeletingVideo = true;
        deleteError = null;

        try
        {
            var result = await ApiClient.DeleteVideoAsync(videoToDelete.BlobName);
            Logger.LogInformation("Video deleted: {FileName}", videoToDelete.FileName);
            
            // Remove from the list
            videos.Remove(videoToDelete);
            
            // Close the modal
            videoToDelete = null;
            
            // Show a brief success message
            StateHasChanged();
        }
        catch (Exception ex)
        {
            deleteError = $"Failed to delete video: {ex.Message}";
            Logger.LogError(ex, "Error deleting video: {FileName}", videoToDelete?.FileName ?? "Unknown");
        }
        finally
        {
            isDeletingVideo = false;
        }
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private string GetFileExtension(string fileName)
    {
        var extension = Path.GetExtension(fileName);
        return string.IsNullOrEmpty(extension) ? "VIDEO" : extension.TrimStart('.');
    }

    private string GetVideoIcon(string contentType)
    {
        return contentType.ToLowerInvariant() switch
        {
            "video/mp4" => "MP4",
            "video/x-msvideo" => "AVI",
            "video/quicktime" => "MOV",
            "video/x-ms-wmv" => "WMV",
            "video/x-flv" => "FLV",
            "video/webm" => "WEBM",
            "video/x-matroska" => "MKV",
            _ => "VIDEO"
        };
    }

    private string GetDisplayTitle(VideoInfo video)
    {
        return !string.IsNullOrWhiteSpace(video.Title) ? video.Title : video.FileName;
    }

    private void StartEditTitle(VideoInfo video)
    {
        editingVideoId = video.BlobName;
        editingTitle = GetDisplayTitle(video);
    }

    private void CancelEditTitle()
    {
        editingVideoId = null;
        editingTitle = string.Empty;
        isUpdatingTitle = false;
    }

    private async Task HandleTitleKeyDown(KeyboardEventArgs e, VideoInfo video)
    {
        if (e.Key == "Enter")
        {
            await SaveTitle(video);
        }
        else if (e.Key == "Escape")
        {
            CancelEditTitle();
        }
    }

    private async Task SaveTitle(VideoInfo video)
    {
        if (string.IsNullOrWhiteSpace(editingTitle))
        {
            return;
        }

        isUpdatingTitle = true;

        try
        {
            var result = await ApiClient.UpdateVideoTitleAsync(video.BlobName, editingTitle.Trim());
            Logger.LogInformation("Video title updated: {BlobName}, Title: {Title}", video.BlobName, result.Title);
            
            // Find and update the video in the list
            var videoIndex = videos.FindIndex(v => v.BlobName == video.BlobName);
            if (videoIndex >= 0)
            {
                videos[videoIndex] = videos[videoIndex] with { Title = result.Title };
            }
            
            // Close the edit mode
            CancelEditTitle();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating video title: {BlobName}", video.BlobName);
            // Keep edit mode open on error so user can retry
        }
        finally
        {
            isUpdatingTitle = false;
        }
    }
}

