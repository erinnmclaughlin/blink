@page "/videos"
@using Microsoft.AspNetCore.Authorization
@inject BlinkApiClient ApiClient
@inject ILogger<VideoList> Logger
@attribute [Authorize]

<PageTitle>Videos</PageTitle>

<h1>Video Library</h1>

<div class="container mt-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading videos...</span>
            </div>
            <p class="mt-3">Loading videos...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" @onclick="LoadVideosAsync">
                <span class="bi bi-arrow-clockwise"></span> Retry
            </button>
        </div>
    }
    else if (videos.Count == 0)
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-film text-muted mb-3" viewBox="0 0 16 16">
                    <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1zm4 0v6h8V1H4zm8 8H4v6h8V9zM1 1v2h2V1H1zm2 3H1v2h2V4zM1 7v2h2V7H1zm2 3H1v2h2v-2zm-2 3v2h2v-2H1zM15 1h-2v2h2V1zm-2 3v2h2V4h-2zm2 3h-2v2h2V7zm-2 3v2h2v-2h-2zm2 3h-2v2h2v-2z"/>
                </svg>
                <h3>No Videos Yet</h3>
                <p class="text-muted">You haven't uploaded any videos yet.</p>
                <a href="/video-upload" class="btn btn-primary mt-3">
                    <span class="bi bi-cloud-upload"></span> Upload Your First Video
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-md-6">
                <p class="text-muted">Showing @videos.Count video@(videos.Count != 1 ? "s" : "")</p>
            </div>
            <div class="col-md-6 text-end">
                <button class="btn btn-outline-secondary btn-sm" @onclick="LoadVideosAsync">
                    <span class="bi bi-arrow-clockwise"></span> Refresh
                </button>
                <a href="/video-upload" class="btn btn-primary btn-sm ms-2">
                    <span class="bi bi-cloud-upload"></span> Upload Video
                </a>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var video in videos.OrderByDescending(v => v.LastModified))
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-start mb-2">
                                <div class="flex-grow-1">
                                    <h5 class="card-title text-truncate" title="@video.FileName">
                                        @video.FileName
                                    </h5>
                                    <h6 class="card-subtitle mb-2 text-muted small">
                                        @GetFileExtension(video.FileName).ToUpperInvariant()
                                    </h6>
                                </div>
                                <span class="badge bg-secondary">
                                    @GetVideoIcon(video.ContentType)
                                </span>
                            </div>
                            
                            <div class="mb-3">
                                <div class="d-flex justify-content-between small text-muted mb-1">
                                    <span><strong>Size:</strong></span>
                                    <span>@FormatFileSize(video.SizeInBytes)</span>
                                </div>
                                <div class="d-flex justify-content-between small text-muted mb-1">
                                    <span><strong>Uploaded:</strong></span>
                                    <span>@(video.LastModified?.LocalDateTime.ToString("g") ?? "Unknown")</span>
                                </div>
                                <div class="d-flex justify-content-between small text-muted">
                                    <span><strong>Blob:</strong></span>
                                    <span class="text-truncate ms-2" style="max-width: 150px;" title="@video.BlobName">
                                        @video.BlobName
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-primary flex-fill" @onclick="() => WatchVideo(video)">
                                    <span class="bi bi-play-circle"></span> Watch
                                </button>
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => ViewVideoDetails(video)">
                                    <span class="bi bi-info-circle"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (selectedVideoForPlayer != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.8);">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@selectedVideoForPlayer.FileName</h5>
                    <button type="button" class="btn-close" @onclick="ClosePlayer"></button>
                </div>
                <div class="modal-body p-0">
                    @if (isLoadingVideo)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading video...</span>
                            </div>
                            <p class="mt-3">Loading video...</p>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(videoPlayerError))
                    {
                        <div class="alert alert-danger m-3" role="alert">
                            <strong>Error!</strong> @videoPlayerError
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(currentVideoUrl))
                    {
                        <video @ref="videoElement" 
                               controls 
                               autoplay 
                               preload="metadata" 
                               class="w-100" 
                               style="max-height: 70vh;" 
                               @onerror="OnVideoError"
                               @onloadedmetadata="OnVideoMetadataLoaded"
                               @oncanplay="OnVideoCanPlay">
                            <source src="@currentVideoUrl" type="@selectedVideoForPlayer.ContentType">
                            Your browser does not support the video tag.
                        </video>
                        <div class="mt-2">
                            <small class="text-muted">If the video doesn't play, try clicking the play button.</small>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <small class="text-muted me-auto">
                        @FormatFileSize(selectedVideoForPlayer.SizeInBytes) â€¢ 
                        @(selectedVideoForPlayer.LastModified?.LocalDateTime.ToString("g") ?? "Unknown")
                    </small>
                    <button type="button" class="btn btn-secondary" @onclick="ClosePlayer">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@if (selectedVideoForDetails != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Video Details</h5>
                    <button type="button" class="btn-close" @onclick="CloseDetailsModal"></button>
                </div>
                <div class="modal-body">
                    <dl class="row">
                        <dt class="col-sm-4">File Name:</dt>
                        <dd class="col-sm-8 text-break">@selectedVideoForDetails.FileName</dd>

                        <dt class="col-sm-4">Blob Name:</dt>
                        <dd class="col-sm-8 text-break"><small>@selectedVideoForDetails.BlobName</small></dd>

                        <dt class="col-sm-4">Size:</dt>
                        <dd class="col-sm-8">@FormatFileSize(selectedVideoForDetails.SizeInBytes)</dd>

                        <dt class="col-sm-4">Content Type:</dt>
                        <dd class="col-sm-8">@selectedVideoForDetails.ContentType</dd>

                        <dt class="col-sm-4">Last Modified:</dt>
                        <dd class="col-sm-8">@(selectedVideoForDetails.LastModified?.LocalDateTime.ToString("F") ?? "Unknown")</dd>
                    </dl>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @onclick="async () => { CloseDetailsModal(); await WatchVideo(selectedVideoForDetails); }">
                        <span class="bi bi-play-circle"></span> Watch
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="CloseDetailsModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<VideoInfo> videos = new();
    private bool isLoading = true;
    private string? errorMessage;
    
    // Video player state
    private VideoInfo? selectedVideoForPlayer;
    private string? currentVideoUrl;
    private bool isLoadingVideo;
    private string? videoPlayerError;
    private ElementReference videoElement;
    
    // Video details state
    private VideoInfo? selectedVideoForDetails;

    protected override async Task OnInitializedAsync()
    {
        await LoadVideosAsync();
    }

    private async Task LoadVideosAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            videos = await ApiClient.GetVideosAsync();
            Logger.LogInformation("Loaded {Count} videos", videos.Count);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load videos: {ex.Message}";
            Logger.LogError(ex, "Error loading videos");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task WatchVideo(VideoInfo video)
    {
        selectedVideoForPlayer = video;
        isLoadingVideo = true;
        videoPlayerError = null;
        currentVideoUrl = null;

        try
        {
            currentVideoUrl = await ApiClient.GetVideoUrlAsync(video.BlobName);
            Logger.LogInformation("Loaded video URL for: {FileName}, URL: {Url}", video.FileName, currentVideoUrl);
            Console.WriteLine($"Video URL: {currentVideoUrl}"); // Debug output to browser console
        }
        catch (Exception ex)
        {
            videoPlayerError = $"Failed to load video: {ex.Message}";
            Logger.LogError(ex, "Error loading video URL for: {FileName}", video.FileName);
            Console.WriteLine($"Error getting video URL: {ex.Message}");
        }
        finally
        {
            isLoadingVideo = false;
        }
    }

    private void ClosePlayer()
    {
        selectedVideoForPlayer = null;
        currentVideoUrl = null;
        videoPlayerError = null;
        isLoadingVideo = false;
    }

    private void ViewVideoDetails(VideoInfo video)
    {
        selectedVideoForDetails = video;
    }

    private void CloseDetailsModal()
    {
        selectedVideoForDetails = null;
    }

    private void OnVideoError()
    {
        Console.WriteLine("Video error occurred!");
        videoPlayerError = "Video failed to load. The video format may not be supported by your browser, or the file may be corrupted.";
    }

    private void OnVideoMetadataLoaded()
    {
        Console.WriteLine("Video metadata loaded successfully");
    }

    private void OnVideoCanPlay()
    {
        Console.WriteLine("Video can play - ready to start playback");
    }

    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len /= 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private string GetFileExtension(string fileName)
    {
        var extension = Path.GetExtension(fileName);
        return string.IsNullOrEmpty(extension) ? "VIDEO" : extension.TrimStart('.');
    }

    private string GetVideoIcon(string contentType)
    {
        return contentType.ToLowerInvariant() switch
        {
            "video/mp4" => "MP4",
            "video/x-msvideo" => "AVI",
            "video/quicktime" => "MOV",
            "video/x-ms-wmv" => "WMV",
            "video/x-flv" => "FLV",
            "video/webm" => "WEBM",
            "video/x-matroska" => "MKV",
            _ => "VIDEO"
        };
    }
}

