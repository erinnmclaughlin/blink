@page "/"
@inject BlinkApiClient ApiClient

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

@if (Message is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p>@Message</p>
}

@code {
    private string? Message { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Message = await ApiClient.GetTestMessage();
    }
}