@page "/videos"
@using Microsoft.AspNetCore.Authorization
@inject BlinkApiClient ApiClient
@inject ILogger<VideoList> Logger
@inject NavigationManager NavigationManager
@attribute [Authorize]
@rendermode @(new Microsoft.AspNetCore.Components.Web.InteractiveServerRenderMode())

<PageTitle>Videos</PageTitle>

<h1>Video Library</h1>

<div class="container mt-4">
    @if (IsLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading videos...</span>
            </div>
            <p class="mt-3">Loading videos...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @ErrorMessage
            <button type="button" class="btn-close" @onclick="() => ErrorMessage = null"></button>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" @onclick="LoadVideosAsync">
                <span class="bi bi-arrow-clockwise"></span> Retry
            </button>
        </div>
    }
    else if (Videos.Count == 0)
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-film text-muted mb-3" viewBox="0 0 16 16">
                    <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1zm4 0v6h8V1H4zm8 8H4v6h8V9zM1 1v2h2V1H1zm2 3H1v2h2V4zM1 7v2h2V7H1zm2 3H1v2h2v-2zm-2 3v2h2v-2H1zM15 1h-2v2h2V1zm-2 3v2h2V4h-2zm2 3h-2v2h2V7zm-2 3v2h2v-2h-2zm2 3h-2v2h2v-2z"/>
                </svg>
                <h3>No Videos Yet</h3>
                <p class="text-muted">You haven't uploaded any videos yet.</p>
                <a href="/videos/upload" class="btn btn-primary mt-3">
                    <span class="bi bi-cloud-upload"></span> Upload Your First Video
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-3">
            <div class="col-md-6">
                <p class="text-muted">Showing @Videos.Count video@(Videos.Count != 1 ? "s" : "")</p>
            </div>
            <div class="col-md-6 text-end">
                <button class="btn btn-outline-secondary btn-sm" @onclick="LoadVideosAsync">
                    <span class="bi bi-arrow-clockwise"></span> Refresh
                </button>
                <a href="/videos/upload" class="btn btn-primary btn-sm ms-2">
                    <span class="bi bi-cloud-upload"></span> Upload Video
                </a>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var video in Videos.OrderByDescending(v => v.LastModified))
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @{
                            var thumbnailUrl = GetThumbnailUrl(video);
                            var hasThumbnail = HasThumbnail(video);
                        }
                        
                        @if (!string.IsNullOrEmpty(thumbnailUrl))
                        {
                            <img src="@thumbnailUrl" class="card-img-top" alt="@GetDisplayTitle(video)" style="height: 180px; object-fit: cover;">
                        }
                        else if (hasThumbnail)
                        {
                            <!-- Thumbnail is being generated -->
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                                <div class="text-center text-muted">
                                    <div class="spinner-border spinner-border-sm mb-2" role="status">
                                        <span class="visually-hidden">Generating thumbnail...</span>
                                    </div>
                                    <div class="small">Generating thumbnail...</div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- No thumbnail yet - show placeholder -->
                            <div class="card-img-top bg-secondary bg-opacity-10 d-flex align-items-center justify-content-center" style="height: 180px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-camera-video text-secondary" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M0 5a2 2 0 0 1 2-2h7.5a2 2 0 0 1 1.983 1.738l3.11-1.382A1 1 0 0 1 16 4.269v7.462a1 1 0 0 1-1.406.913l-3.111-1.382A2 2 0 0 1 9.5 13H2a2 2 0 0 1-2-2V5zm11.5 5.175 3.5 1.556V4.269l-3.5 1.556v4.35zM2 4a1 1 0 0 0-1 1v6a1 1 0 0 0 1 1h7.5a1 1 0 0 0 1-1V5a1 1 0 0 0-1-1H2z"/>
                                </svg>
                            </div>
                        }
                        
                        <div class="card-body">
                            <div class="d-flex align-items-start mb-2">
                                <div class="flex-grow-1" style="min-width: 0;">
                                    <div class="d-flex align-items-center mb-1">
                                        <h5 class="card-title text-truncate mb-0 flex-grow-1" title="@GetDisplayTitle(video)">
                                            @GetDisplayTitle(video)
                                        </h5>
                                    </div>
                                    @if (video.VideoDate.HasValue)
                                    {
                                        <p class="card-text small text-muted mb-2">
                                            <span class="bi bi-calendar3"></span> @video.VideoDate.Value.ToString("MMM d, yyyy")
                                        </p>
                                    }
                                </div>
                                <span class="badge bg-secondary ms-2">
                                    @GetVideoIcon(video.ContentType)
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex gap-2">
                                <a href="@GetWatchUrl(video)" class="btn btn-sm btn-primary flex-fill">
                                    <span class="bi bi-play-circle"></span> Watch
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<VideoInfo> Videos { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private string? ErrorMessage { get; set; }
    private Dictionary<string, string?> ThumbnailUrls { get; set; } = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadVideosAsync();
        }
    }

    private async Task LoadVideosAsync()
    {
        IsLoading = true;
        ErrorMessage = null;
        await InvokeAsync(StateHasChanged);

        try
        {
            Videos = await ApiClient.GetVideosAsync();
            Logger.LogInformation("Loaded {Count} videos", Videos.Count);

            // Load thumbnail URLs for videos that have thumbnails
            ThumbnailUrls.Clear();
            foreach (var video in Videos.Where(v => !string.IsNullOrEmpty(v.ThumbnailBlobName)))
            {
                try
                {
                    var urlResponse = await ApiClient.GetVideoUrlWithThumbnailAsync(video.BlobName);
                    ThumbnailUrls[video.BlobName] = urlResponse.ThumbnailUrl;
                }
                catch (Exception ex)
                {
                    Logger.LogWarning(ex, "Failed to load thumbnail URL for video {BlobName}", video.BlobName);
                }
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Failed to load videos: {ex.Message}";
            Logger.LogError(ex, "Error loading videos");
        }
        finally
        {
            IsLoading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private string GetDisplayTitle(VideoInfo video)
    {
        return !string.IsNullOrWhiteSpace(video.Title) ? video.Title : video.FileName;
    }

    private string GetWatchUrl(VideoInfo video)
    {
        return $"/videos/watch/{Uri.EscapeDataString(video.BlobName)}";
    }

    private string GetVideoIcon(string contentType)
    {
        return contentType.ToLower() switch
        {
            "video/mp4" => "MP4",
            "video/quicktime" => "MOV",
            "video/x-msvideo" => "AVI",
            "video/x-matroska" => "MKV",
            _ => "VIDEO"
        };
    }

    private bool HasThumbnail(VideoInfo video)
    {
        return !string.IsNullOrEmpty(video.ThumbnailBlobName);
    }

    private string? GetThumbnailUrl(VideoInfo video)
    {
        if (string.IsNullOrEmpty(video.ThumbnailBlobName))
            return null;

        return ThumbnailUrls.GetValueOrDefault(video.BlobName);
    }
}

